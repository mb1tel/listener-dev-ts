# Environment Configuration (.env.sample)
# Copy to .env and modify as needed

# Node Environment: development, production, test
NODE_ENV=development

# Server Configuration
PORT=3000

# Redis Configuration
REDIS_MODE=standalone # standalone, cluster, or sentinel
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=bitnami

# For Cluster Mode
REDIS_NODES=redis-node-0:6379,redis-node-1:6379,redis-node-2:6379

# For Sentinel Mode
REDIS_SENTINELS=sentinel-0:26379,sentinel-1:26379,sentinel-2:26379
REDIS_SENTINEL_NAME=mymaster
REDIS_SENTINEL_PASSWORD=

# Application Settings
LOG_LEVEL=info
CORS_ORIGIN=*

# Security
SECRET_KEY=your_super_secret_socket_key_2024

# Development Settings (only used in development)
DEBUG=false
ENABLE_METRICS=false 